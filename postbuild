#!/bin/bash

# 1. Install the FLTK package (Octave's default plotting toolkit)
# The 'fltk' backend is often more reliable than 'gnuplot' on headless servers.
octave --no-gui --eval 'pkg install -forge fltk;'

# 2. Set the graphics toolkit to fltk
# The 'inline' backend is what allows the image to be displayed in Jupyter.
octave --no-gui --eval 'pkg load fltk; graphics_toolkit ("fltk");'

# Ensure the system-wide Octave path is correctly saved
octave --no-gui --eval 'savepath'